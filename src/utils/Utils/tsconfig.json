{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "lib": ["dom", "esnext.asynciterable", "ES2021"],
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["node_modules", "build", "dist", "public", "**/*.stories.tsx", "**/*.mock.ts", "**/*.test.tsx"],
  
}
